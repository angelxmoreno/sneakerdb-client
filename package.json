{
    "name": "sneakerdb-client",
    "version": "1.0.0",
    "description": "A TypeScript client for interacting with The Sneaker Database API on RapidAPI.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "keywords": [
        "sneaker",
        "sdk",
        "client",
        "rapidapi",
        "The Sneaker Database API"
    ],
    "author": {
        "name": "Angel S. Moreno",
        "email": "angelxmoreno@gmail.com"
    },
    "license": "MIT",
    "homepage": "https://github.com/angelxmoreno/sneakerdb-client",
    "bugs": {
        "url": "https://github.com/angelxmoreno/sneakerdb-client/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/angelxmoreno/sneakerdb-client.git"
    },
    "engines": {
        "node": ">=22.17.0",
        "bun": ">=1.2.0"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "bun run build:js && bun run build:types",
        "build:js": "bun build src/index.ts --outdir dist --target node --format cjs --minify --sourcemap",
        "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist",
        "test": "bun test",
        "test:coverage": "bun test --coverage",
        "release": "release-it --only-version",
        "check-types": "tsc --noEmit",
        "prepare": "lefthook install",
        "lint": "biome check .",
        "lint:fix": "biome check --write ."
    },
    "dependencies": {
        "axios": "^1.6.7",
        "axios-date-transformer": "^1.0.3",
        "dotenv": "^16.4.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.9",
        "@commitlint/cli": "^20.2.0",
        "@commitlint/config-conventional": "^20.2.0",
        "@types/bun": "^1.3.4",
        "axios-mock-adapter": "^1.22.0",
        "lefthook": "^2.0.12",
        "rimraf": "^6.1.2",
        "typescript": "^5.9.3"
    },
    "release-it": {
        "publishConfig": {
            "registry": "https://registry.npmjs.org"
        },
        "git": {
            "commitMessage": "chore: release v${version}"
        },
        "github": {
            "release": true
        }
    }
}
